<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Warn"
      internalLogFile="C:\git\damienbod\AspNetCoreNlog\Logs\internal-nlog.txt">

  <extensions>
    <add assembly="NLog.Targets.ElasticSearch"/>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <targets>
    <target name="exceptionlog" xsi:type="File" archiveAboveSize="5242880" archiveEvery="Minute" archiveNumbering="Date"
              archiveDateFormat="yyyyMMdd" fileName="D:\Logs\CalculateAppLog\Exceptions\${date:format=yyyy-MM-dd}.txt"
         layout="------${level}(${longdate})${machinename}------${newline}
                      Exception Type:${exception:format=Type} |
                      Exception Message:${exception:format=Message} |
                      Stack Trace:${exception:format=Stack Trace} |
                      Additional Info:${message}${newline}" ></target>


    <target name="database" xsi:type="Database" >

      <connectionString>${gdc:item=connectionString}</connectionString>

      <commandText>
        insert into dbo.Logs (
        METHOD_TYPE,INSERT_DATE,VALUE
        ) values (
        @METHOD_TYPE,@INSERT_DATE,@VALUE
        )      
      </commandText>
      
      <parameter name="@INSERT_DATE" dbType="SqlDbType.Time"  layout="${event-properties:item=INSERT_DATE}" />
      <parameter name="@VALUE"   layout="${event-properties:item=VALUE}" />
      <parameter name="@METHOD_TYPE" dbType="SqlDbType.Int"   layout="${event-properties:item=METHOD_TYPE}" />

    </target>

  </targets>

  <rules>
    
    <logger name="*" level="Error" writeTo="exceptionlog" />
    
    <logger name="*" level="Info" writeTo="database" />
    
  </rules>
</nlog>